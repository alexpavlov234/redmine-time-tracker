{
  "name": "redmine-time-tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:scss": "concurrently \"npm run sass:watch\" \"npm run dev\"",
    "build": "npm run sass:build && vite build",
    "build:css": "vite build --mode production",
    "preview": "vite preview",
    "proxy": "node proxy-simple.js",
    "dev:full": "npm run sass:build && concurrently \"npm run proxy\" \"npm run dev:scss\"",
    "sass:watch": "sass src/scss/main.scss:dist/css/main.min.css --watch --style=compressed --source-map",
    "sass:build": "sass src/scss/main.scss:dist/css/main.min.css --style=compressed --source-map"
  },
  "dependencies": {
    "bootstrap": "^5.3.7",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "http-proxy-middleware": "^3.0.5",
    "node-fetch": "^3.3.2",
    "sass": "^1.89.2"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^22.14.0",
    "concurrently": "^9.2.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  }
}
